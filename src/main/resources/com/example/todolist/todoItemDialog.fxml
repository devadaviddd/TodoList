<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.todolist.DialogController">
    <headerText>
        We could put instructions here
    </headerText>
    <content>
        <GridPane vgap="10" hgap="10">
            <Label GridPane.rowIndex="0" GridPane.columnIndex="0">Short Description:</Label>
            <TextField fx:id="shortDescription" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label GridPane.rowIndex="1" GridPane.columnIndex="0">Detail:</Label>
            <TextArea fx:id="detailArea" GridPane.rowIndex="1" GridPane.columnIndex="1" wrapText="true"/>

            <Label  GridPane.rowIndex="2" GridPane.columnIndex="0">Deadline:</Label>
            <DatePicker fx:id="deadlinePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>
    </content>
</DialogPane>
